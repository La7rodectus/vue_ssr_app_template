{
  "name": "vue_ssr_app_template",
  "version": "0.1.0",
  "description": "Template for creating SSR apps using Vue.js.v3",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build:client": "vue-cli-service build --dest dist/client",
    "build:server": "cross-env SSR=1 vue-cli-service build --dest dist/server",
    "build": "npm run build:client && npm run build:server",
    "start": "npm run build && node server.js",
    "lint": "cross-env ./node_modules/.bin/eslint --color ./ && vue-cli-service lint"
  },
  "dependencies": {
    "@vue/server-renderer": "^3.1.4",
    "core-js": "^3.6.5",
    "express": "^4.17.1",
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0",
    "@vue/eslint-config-airbnb": "^5.0.2",
    "cross-env": "^7.0.2",
    "babel-eslint": "^10.1.0",
    "webpack": "^4.46.0",
    "webpack-manifest-plugin": "^3.1.1",
    "webpack-node-externals": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-vue": "^7.13.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "@vue/airbnb"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
